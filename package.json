{
  "name": "@internetarchive/ia-components",
  "version": "0.0.1-alpha.2",
  "description": "A web component library from the Internet Archive.",
  "license": "AGPL-3.0-only",
  "main": "./dist/src/components/index.js",
  "types": "./dist/src/components/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/internetarchive/ia-components.git"
  },
  "bugs": {
    "url": "https://github.com/internetarchive/ia-components/issues"
  },
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "clean": "wireit",
    "lint": "wireit",
    "format": "wireit",
    "circular": "wireit",
    "postinstall": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "magic-snowflakes": "^7.0.2"
  },
  "devDependencies": {
    "@open-wc/testing-helpers": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@vitest/browser": "^4.0.8",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-lit-a11y": "^4.1.4",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-wc": "^2.2.1",
    "madge": "^8.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "ts-lit-plugin": "^2.0.2",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "wireit": "^0.14.12"
  },
  "exports": {
    ".": "./dist/src/components/index.js",
    "./components/*": "./dist/src/components/*",
    "./labs/*": "./dist/src/labs/*"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "wireit": {
    "build": {
      "command": "tsc --build --pretty && tsc-alias",
      "dependencies": [
        "circular"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ]
    },
    "circular": {
      "command": "madge --circular --extensions ts ."
    },
    "clean": {
      "command": "rm -rf dist"
    },
    "dev": {
      "command": "vite"
    },
    "lint": {
      "command": "eslint . && prettier \"**/*.ts\" --check"
    },
    "format": {
      "command": "eslint . --fix && prettier \"**/*.ts\" --write"
    },
    "postinstall": {
      "dependencies": [
        "build"
      ]
    },
    "test": {
      "command": "vitest",
      "dependencies": [
        "circular"
      ]
    }
  }
}
