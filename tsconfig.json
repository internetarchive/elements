{
  "compilerOptions": {
    "target": "es2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "lib": [
      "es2021",
      "dom",
      "dom.iterable"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "./",
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
  },
  "include": [
    "**/*.ts"
  ]
}
